
<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!--Content for the ADD page-->
<div class="container">
<div class="row">
    <div class="col-md-offset-3 col-md-4">
    <h1><%= title %></h1>

    <form class="form" method="POST">
        <div class="form-group">
            <label for="nameTextField">Name</label>
            <input type="text" class="form-control"
            id="nameTextField"
            placeholder="Enter contact Name"
            name="name" required>
            </div>

            
            <div class="form-group">
                 <label for="phoneTextField">Phone number</label>
                <input type="tel" class="form-control"
                id="phoneTextField"
                placeholder="Enter contact phone number"
                name="phone" required>
            </div>

            <div class="form-group">
                <label for="emailTextField">Email</label>
               <input type="text" class="form-control"
               id="emailTextField"
               placeholder="Enter contact Email"
               name="email" required>
           </div>
           <button class ="btn btn-success">
            <i class="fas fa-edit"></i>Submit</button>

            <a href="/bcontact-list" class="btn btn-warning">
            <i class="fas fa-undo"></i>Cancel</a>

        </form>
    </div>
</div>
           





